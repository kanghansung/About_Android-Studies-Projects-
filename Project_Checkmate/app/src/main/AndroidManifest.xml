<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.checkmate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MemoActivity" android:windowSoftInputMode="adjustNothing"></activity>
        <activity android:name=".InformationActivity" android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".CheckMateActivity" android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FolderPage" android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustNothing"/>
    </application>

</manifest>