<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130sp"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <!--리뷰랑 별점은 xml따로 만들고 백그라운드로 깔아주고 textview로 숫자 지정.-->
    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/img" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="가게이름"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="11dp"
                android:src="@drawable/icon_white_spot"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/shopPlace_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#F1F1F1"
                android:text="OO구"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kindOfShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="술집"
                android:paddingLeft="8dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/shopPlace_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울 마포구 망월동"
                android:paddingLeft="12dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/txtReview"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/rounded"
                android:text="리뷰|100개"
                android:textSize="12dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginRight="7dp"/>
            <Button
                android:id="@+id/btnGrade"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/rounded_star"
                android:text="3.5/5"
                android:gravity="center"
                android:paddingLeft="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center_vertical">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/x_white"/>

    </LinearLayout>

</LinearLayout>