<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_top2">

        <LinearLayout
            android:id="@+id/linearLayoutBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_white_back" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/linearLayoutchooseKind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp">
                <Button
                    android:id="@+id/btnSelectKind"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_top2"
                    android:text="지역별 검색"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="17dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_white_unfold"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayouSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_search"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>